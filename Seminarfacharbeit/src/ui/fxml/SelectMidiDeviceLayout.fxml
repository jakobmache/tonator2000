<VBox spacing="5.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Verfügbare MIDI-Geräte:" />
      <ChoiceBox fx:id="availableMidiDevicesBox" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
      <VBox alignment="CENTER_RIGHT" centerShape="false">
         <children>
            <Button fx:id="connectMidiDeviceButton" alignment="BOTTOM_LEFT" mnemonicParsing="false" onAction="#onConnectMidiDeviceAction" text="Verbinden" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" top="10.0" />
         </VBox.margin>
      </VBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
